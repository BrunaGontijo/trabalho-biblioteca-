from tkinter import messagebox, ttk
import mysql.connector
from mysql.connector import Error
import tkinter as tk 
# Função para criar conexão com o banco de dados
def criar_conexao():
    try:
        conexao = mysql.connector.connect(
        host='localhost',
        database='bibilioteca',  # Banco de dados correto
        user='root',
        password='acesso123'
        )
        if conexao.is_connected():
          print('conexão bem sucedida com o banco de dados')
        return conexao 
    except Error as e:
        messagebox.showerror("Erro", f"Erro ao conectar ao MySQL: {e}")
        return None 
def carregar_livros():
    conexao = criar_conexao()
    if conexao:
        try:
            cursor = conexao.cursor()
            cursor.execute("SELECT * FROM livros")  # Alterado para a tabela correta 'livros'
            for row in cursor.fetchall():
                tree_livros.insert("", tk.END, values=row)  # Insere os dados na tabela
            cursor.close()
        except Error as e:
            messagebox.showerror("Erro", f"Erro ao carregar os livros: {e}")
        finally:
      
          conexao.close()
def main_menu():
       root = tk()
       root.title('feira de livros')
       root.geometry("700x700")
# janela livros
def querypg(idlivros, autor,genero,idioma,localização, status):
    print("idlivros:", idlivros)
    print("autor:", autor)
    print("email:", genero)
    print("telefone:", idioma)
    print("localização:", localização)
    print("status:", status)   
carregar_livros()

root.mainloop()
